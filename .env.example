# Medula Bilgileri
MEDULA_URL=https://medula.sgk.gov.tr
MEDULA_USERNAME=your_username_here
MEDULA_PASSWORD=your_password_here

# Browser Ayarları
BROWSER_TYPE=chrome
HEADLESS=false
PAGE_LOAD_TIMEOUT=30
IMPLICIT_WAIT=10

# OpenAI API Ayarları
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Logging Ayarları
LOG_LEVEL=INFO
LOG_FILE=logs/eczane_otomasyon.log

# İş Mantığı Ayarları
CHECK_INTERVAL=60
MAX_RETRY_ATTEMPTS=3
AUTO_APPROVE_THRESHOLD=0.8

# Güvenlik Ayarları
ENABLE_SCREENSHOTS=true
SCREENSHOT_DIR=screenshots